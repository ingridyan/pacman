class Person:
    def __init__(self, person, personX, personY, personX_change, personY_change, personFacingRighy):
        self.person = person
        self.personX = personX
        self.personY = personY
        self.personX_change = personX_change
        self.personY_change = personY_change
        self.personFacingRighy = personFacingRighy

lilia = Person("landry",  370, 300, 0, 0, True)
ashlyn = Person("landry",  370, 300, 0, 0, True)
alexis = Person("landry",  370, 300, 0, 0, True)
ingrid = Person("landry",  370, 300, 0, 0, True)
