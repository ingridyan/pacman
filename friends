import pygame
import math
import random

class Person:
    def __init__(self, person, personX, personY, personX_change, personY_change, personFacingRight, personFacingLeft):
        self.person = person
        self.personX = personX
        self.personY = personY
        self.personX_change = personX_change
        self.personY_change = personY_change
        self.personFacingRight = personFacingRight
        self.personFacingLeft = personFacingLeft

    def fullname(self):
        return '{} {} {} {} {} {}'.format(self.person, self.personX, self.personY, self.personX_change, self.personY_change,
                              self.personFacingRight, self.personFacingLeft)

DEFAULT_IMAGE_SIZE_LILIA = (80, 140)
DEFAULT_IMAGE_SIZE_ALEX = (90, 153)
DEFAULT_IMAGE_SIZE_FOR_INGY = (65, 125)
DEFAULT_IMAGE_SIZE_FOR_ASH = (70, 130)

ashlynIMG = pygame.image.load('ashlyn walking png.png')
alexisIMG = pygame.image.load('alexis walking png.png')
liliaIMG = pygame.image.load('lilia png.png')
ingyIMG = pygame.image.load('ingrid walking png.png')

ashlynIMG = (pygame.transform.scale(ashlynIMG, DEFAULT_IMAGE_SIZE_FOR_ASH))
leftashlynIMG = pygame.transform.flip(ashlynIMG, True, False)
alexisIMG = (pygame.transform.scale(alexisIMG, DEFAULT_IMAGE_SIZE_ALEX))
leftalexisIMG = pygame.transform.flip(alexisIMG, True, False)
liliaIMG = (pygame.transform.scale(liliaIMG, DEFAULT_IMAGE_SIZE_LILIA))
leftliliaIMG = pygame.transform.flip(liliaIMG, True, False)
ingyIMG = (pygame.transform.scale(ingyIMG, DEFAULT_IMAGE_SIZE_FOR_INGY))
leftingyIMG = pygame.transform.flip(ingyIMG, True, False)

ashlyn = Person(ashlynIMG,  random.randint(0, 730), random.randint(25, 150), 0.2, 30, True, leftashlynIMG)
alexis = Person(alexisIMG,  random.randint(0, 730), random.randint(25, 150), 0.2, 30, True, leftalexisIMG)
lilia = Person(liliaIMG,  random.randint(0, 730), random.randint(25, 150), 0.2, 30, True, leftliliaIMG)
ingrid = Person(ingyIMG,  random.randint(0, 730), random.randint(25, 150), 0.2, 30, True, leftingyIMG)

print(lilia.fullname())
